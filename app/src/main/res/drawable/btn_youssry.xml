<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnStartShadow"
                        android:centerColor="@color/btnCenterShadow"
                        android:endColor="@color/btnEndShadow"
                        android:angle="90"/>
                    <corners android:radius="5dp"/>
                    <padding android:top="3dp"
                        android:bottom="3dp"
                        android:right="3dp"
                        android:left="3dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnCenterColor"
                        android:centerColor="@color/btnStartColor"
                        android:endColor="@color/btnEndColor"
                        android:angle="90"/>
                    <size android:height="20dp"
                        android:width="40dp"/>
                    <corners android:radius="5dp"/>
                    <padding android:right="10dp"
                        android:bottom="3dp"
                        android:left="4dp"
                        android:top="3dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnStartShadow"
                        android:centerColor="@color/btnCenterShadow"
                        android:endColor="@color/btnEndShadow"
                        android:angle="90"/>
                    <corners android:radius="5dp"/>
                    <padding android:top="3dp"
                        android:bottom="3dp"
                        android:right="3dp"
                        android:left="3dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnCenterColor"
                        android:centerColor="@color/btnStartColor"
                        android:endColor="@color/btnEndColor"
                        android:angle="90"/>
                    <size android:height="20dp"
                        android:width="40dp"/>
                    <corners android:radius="5dp"/>
                    <padding android:right="10dp"
                        android:bottom="3dp"
                        android:left="4dp"
                        android:top="3dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnStartShadow"
                        android:centerColor="@color/btnCenterShadow"
                        android:endColor="@color/btnEndShadow"
                        android:angle="90"/>
                    <corners android:radius="5dp"/>
                    <padding android:top="2dp"
                        android:bottom="2dp"
                        android:right="2dp"
                        android:left="2dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/btnStartColor"
                        android:centerColor="@color/btnCenterColor"
                        android:endColor="@color/btnEndColor"
                        android:angle="90"/>
                    <size android:height="20dp"
                        android:width="40dp"/>
                    <corners android:radius="5dp"/>
                    <padding android:right="20dp"
                        android:bottom="5dp"
                        android:left="15dp"
                        android:top="5dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

</selector>
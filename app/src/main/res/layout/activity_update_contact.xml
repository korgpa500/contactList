<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yousryelwrdany.contactlist.UpdateContact"
    android:paddingTop="30dp"
    android:background="@drawable/youssry_background">
    <TextView
        android:id="@+id/labelNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/txtEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="20sp"
        android:layout_toRightOf="@id/labelNameEdit"
        android:textColor="@color/grayBackground"/>
    <TextView
        android:id="@+id/labelPhoneEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone : "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_below="@id/labelNameEdit"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/txtEditPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textSize="20sp"
        android:layout_toRightOf="@id/labelNameEdit"
        android:layout_below="@id/txtEditName"
        android:inputType="phone"
        android:textColor="@color/grayBackground"/>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Update"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_youssry"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>

</RelativeLayout>
